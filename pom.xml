<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="
           http://maven.apache.org/POM/4.0.0
           https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mycompany</groupId>
  <artifactId>azure-project-v53</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>mule-application</packaging>
  <name>azure-project-v53</name>
  
  <!-- ===================== -->
  <!-- PROPERTIES -->
  <!-- ===================== -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    
    <!-- Mule Runtime -->
    <app.runtime>4.9.0</app.runtime>
    <mule.maven.plugin.version>4.6.0</mule.maven.plugin.version>
    
    <!-- Default Properties -->
    <anypoint.environment>Sandbox</anypoint.environment>
    <secure.key>dummy</secure.key>
    <mule.env>dev</mule.env>
    
    <!-- ✅ CRITICAL: Skip default Maven deploy to Exchange -->
    <maven.deploy.skip>true</maven.deploy.skip>
    
    <!-- CloudHub 2.0 Deployment Properties -->
    <cloudhub.application.name>azure-project-v53</cloudhub.application.name>
    <cloudhub.environment>Sandbox</cloudhub.environment>
    <cloudhub2.target>Cloudhub-US-East-2</cloudhub2.target>
    <cloudhub2.region>us-east-2</cloudhub2.region>
    <cloudhub.worker.type>MICRO</cloudhub.worker.type>
    <cloudhub.workers>1</cloudhub.workers>
  </properties>
  
  <!-- ===================== -->
  <!-- BUILD -->
  <!-- ===================== -->
  <build>
    <!-- REQUIRED for mule-application packaging -->
    <extensions>
      <extension>
        <groupId>org.mule.tools.maven</groupId>
        <artifactId>mule-maven-plugin</artifactId>
        <version>${mule.maven.plugin.version}</version>
      </extension>
    </extensions>
    
    <plugins>
      <!-- ✅ Mule Maven Plugin (Base Configuration) -->
      <plugin>
        <groupId>org.mule.tools.maven</groupId>
        <artifactId>mule-maven-plugin</artifactId>
        <version>${mule.maven.plugin.version}</version>
        <configuration>
          <muleVersion>${app.runtime}</muleVersion>
          <classifier>mule-application</classifier>
        </configuration>
        <executions>
          <execution>
            <id>package</id>
            <phase>package</phase>
            <goals>
              <goal>package</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <!-- ✅ Skip default Maven deploy plugin globally -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>3.1.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
  <!-- ===================== -->
  <!-- DEPENDENCIES -->
  <!-- ===================== -->
  <dependencies>
    <!-- HTTP Connector -->
    <dependency>
      <groupId>org.mule.connectors</groupId>
      <artifactId>mule-http-connector</artifactId>
      <version>1.10.3</version>
      <classifier>mule-plugin</classifier>
    </dependency>
    
    <!-- APIKit Module -->
    <dependency>
      <groupId>org.mule.modules</groupId>
      <artifactId>mule-apikit-module</artifactId>
      <version>1.11.3</version>
      <classifier>mule-plugin</classifier>
    </dependency>
    
    <!-- Salesforce Connector -->
    <dependency>
      <groupId>com.mulesoft.connectors</groupId>
      <artifactId>mule-salesforce-connector</artifactId>
      <version>10.22.5</version>
      <classifier>mule-plugin</classifier>
    </dependency>
    
    <!-- Secure Configuration Property Module -->
    <dependency>
      <groupId>com.mulesoft.modules</groupId>
      <artifactId>mule-secure-configuration-property-module</artifactId>
      <version>1.3.0</version>
      <classifier>mule-plugin</classifier>
    </dependency>
  </dependencies>
  
  <!-- ===================== -->
  <!-- REPOSITORIES -->
  <!-- ===================== -->
  <repositories>
    <repository>
      <id>anypoint-exchange-v3</id>
      <name>Anypoint Exchange V3</name>
      <url>https://maven.anypoint.mulesoft.com/api/v3/maven</url>
    </repository>
    <repository>
      <id>mulesoft-releases</id>
      <name>MuleSoft Releases Repository</name>
      <url>https://repository.mulesoft.org/releases/</url>
    </repository>
  </repositories>
  
  <pluginRepositories>
    <pluginRepository>
      <id>mulesoft-releases</id>
      <name>MuleSoft Releases Repository</name>
      <url>https://repository.mulesoft.org/releases/</url>
    </pluginRepository>
  </pluginRepositories>
  
  <!-- ===================== -->
  <!-- ✅ PROFILES -->
  <!-- ===================== -->
  <profiles>
    <!-- ============================================= -->
    <!-- CloudHub 2.0 Deployment Profile -->
    <!-- ============================================= -->
    <profile>
      <id>cloudhub2</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <!-- ✅ Explicitly skip Maven deploy plugin in profile -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <version>3.1.1</version>
            <configuration>
              <skip>true</skip>
            </configuration>
          </plugin>
          
          <!-- ✅ Disable Exchange plugin -->
          <plugin>
            <groupId>org.mule.tools.maven</groupId>
            <artifactId>exchange-mule-maven-plugin</artifactId>
            <version>0.1.4</version>
            <executions>
              <execution>
                <id>default-exchange-pre-deploy</id>
                <phase>none</phase>
              </execution>
              <execution>
                <id>default-exchange-deploy</id>
                <phase>none</phase>
              </execution>
            </executions>
          </plugin>

          <!-- ============================================= -->
          <!-- ✅ CloudHub 2.0 Deployment Configuration -->
          <!-- ============================================= -->
          <plugin>
            <groupId>org.mule.tools.maven</groupId>
            <artifactId>mule-maven-plugin</artifactId>
            <version>${mule.maven.plugin.version}</version>
            <configuration>
              <cloudHub2Deployment>
                <!-- Anypoint Platform Configuration -->
                <uri>https://anypoint.mulesoft.com</uri>
                <provider>MC</provider>
                <environment>${cloudhub.environment}</environment>
                <target>${cloudhub2.target}</target>
                
                <!-- Mule Runtime -->
                <muleVersion>${app.runtime}</muleVersion>
                <applicationName>${cloudhub.application.name}</applicationName>
                
                <!-- ✅ Connected App Authentication -->
                <connectedAppClientId>${anypointClientId}</connectedAppClientId>
                <connectedAppClientSecret>${anypointClientSecret}</connectedAppClientSecret>
                <connectedAppGrantType>client_credentials</connectedAppGrantType>
                
                <!-- ✅ Resource Allocation -->
                <replicas>1</replicas>
                <vCores>0.1</vCores>
                
                <!-- ✅ Deployment Settings (Optional) -->
                <deploymentSettings>
                  <http>
                    <inbound>
                      <publicUrl>${cloudhub.application.name}.${cloudhub2.region}.cloudhub.io</publicUrl>
                    </inbound>
                  </http>
                </deploymentSettings>
                
                <!-- ✅ Application Properties -->
                <properties>
                  <mule.env>${mule.env}</mule.env>
                  <secure.key>${secure.key}</secure.key>
                </properties>
              </cloudHub2Deployment>
            </configuration>
            <executions>
              <execution>
                <id>deploy-cloudhub2</id>
                <phase>deploy</phase>
                <goals>
                  <goal>deploy</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
